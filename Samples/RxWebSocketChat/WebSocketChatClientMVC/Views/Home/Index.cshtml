
<div class="chat" data-chat-websocket="ws://127.0.0.1:8001" data-chat-websocket-notification="@Url.Content("~/Content/Sounds/Pling-KevanGC-1485374730.wav")">
    <h2 class=" title">WebSocketListener Rx Chat</h2>
    <p>This is an example of how to use WebSocketListener with LINQ Reactive extensions.</p>
    <div class="join-controls">
        <label>Nick</label><input type="text" class="nick-input" disabled placeholder="Enter your nick" />
        <label>Chat Room</label><input type="text" class="chat-room-input" disabled placeholder="Enter a chat room" />
        <button class="join-room" disabled>Join</button>
    </div>
    <div class="chat-room">
        <a class="audio-switch"></a>
        <div class="chat-log">
        </div>
        <div class="chat-participants">
        </div>
        <div>
            <label>Message</label>
            <input type="text" class="message" placeholder="Enter a chat message" />
            <button class="send">Send</button>
        </div>
        
    </div>
</div>

@section scripts {
<script src="~/Content/Scripts/chat.js"></script>
}

@section styles{
<link href="~/Content/Styles/chat.css" rel="stylesheet" />
}
